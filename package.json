{
  "name": "@viverseofficial/playcanvas-vrm",
  "version": "1.6.0",
  "description": "PlayCanvas VRM library for loading and manipulating VRM models",
  "license": "UNLICENSED",
  "type": "module",
  "files": ["dist"],  
  "main": "dist/playcanvas-vrm.js",
  "types": "dist/playcanvas-vrm.d.ts",
  "scripts": {
    "watch": "nodemon --watch src --ext '*' --exec 'pnpm build' --verbose",
    "build": "tsc && pnpm run build:js && pnpm run build:min",
    "build:js": "vite build",
    "build:min": "MINIFY_MODE=true vite build",
    "preview": "vite preview",
    "prepare": "npm run build",
    "release:patch": "npm version patch -m \"chore(release): %s\"",
    "release:minor": "npm version minor -m \"chore(release): %s\"",
    "release:major": "npm version major -m \"chore(release): %s\""
  },
  "exports": {
    ".": {
      "import": "./dist/playcanvas-vrm.js",
      "types": "./dist/playcanvas-vrm.d.ts"
    }
  },

  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vite-plugin-banner": "^0.7.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-glsl": "^1.3.0",
    "vite-plugin-mkcert": "^1.17.4",
    "vite-plugin-static-copy": "^1.0.6"
  },
  "peerDependencies": {
    "playcanvas": "^2.10.3"
  }
}
